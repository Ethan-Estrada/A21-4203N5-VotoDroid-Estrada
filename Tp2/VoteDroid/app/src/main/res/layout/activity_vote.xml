<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:padding="10dp"
        android:id="@+id/textViewQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_ViewHard"
        android:textSize="30sp" />

    <RatingBar
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:theme="@style/RatingBar"/>

    <EditText
        android:id="@+id/edit_TxtVote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#008577"
        android:hint="@string/txt_Voter"
        android:inputType="text"
        android:layout_margin="40dp" />

    <Button
        android:id="@+id/btn_ajouterVote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#D6D7D7"
        android:textColor="@color/Background_Color_title"
        android:text="@string/btn_Voter" />

</LinearLayout>